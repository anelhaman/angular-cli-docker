#!/bin/bash -xe

docker_build(){
  docker build -t node .
}

docker_run(){
  docker run -d --rm --name node -v $(pwd):/usr/src/node -p 3000:3000 -p 4200:4200 node
}

docker_stop(){
  docker stop node
}
docker_list(){
  docker container ls -a
}
docker_exec(){
  docker exec -it node /bin/bash
}

case "$1" in
  build)
    docker_build
    ;;
  stop)
    docker_stop
    ;;
  ps)
    docker_list
    ;;
  run)
    docker_run
    ;;
  exec)
    docker_run
    ;;

  *)
    echo "bad input"
    echo "comm build"
    echo "comm run"
    echo "comm stop"
    echo "comm ps"
    echo "comm exec"
    exit 1;
esac
